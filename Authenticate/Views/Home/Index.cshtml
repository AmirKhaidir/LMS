@model IEnumerable<Authenticate.Models.Employee>
@{
    ViewData["Title"] = "Home Page";

}

<div class="card-deck">
    @foreach(var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "coronavirus.png");
        <div class="card m-4" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div> 
            <img class="card-img-top imageThumbnail" style="height:200px;width:auto;" src="@photoPath" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
