@model List<Authenticate.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove user from this role</h2>
        </div>
        <div class="card-body">
            @for(int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId" >Cancel</a>
        </div>
    </div>
</form>


